// // Custom styles.
// //设置宽度大于1200px 使用此样式
btnBgColor = #f79533;
btnStyle()
	border-radius arguments
	background-color rgba(255, 255, 255, .6)
	box-shadow inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35)
btnHoverStyle()
	color: #fff
	box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
	background-image: linear-gradient(90deg, #a166ab 0%, #f37055 50%, #a166ab 100%)!important;
