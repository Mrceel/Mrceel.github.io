//网页顶部的黑色线
.headband {
	display none;
}

rigthbottom()
	border-radius: 8px;
	background: #f79533;
	right: 15px;
	opacity: 0.7;
	box-sizing: content-box;
	btnStyle(8px)
	color: #000

//返回顶部样式
.back-to-top.back-to-top-on{
	bottom: 10px;
	padding: 0px 8px;
	rigthbottom()
	
}
.back-to-top.back-to-top-on:hover ,.sidebar-toggle:hover {
	btnHoverStyle()
}
.sidebar-toggle:hover {
	.sidebar-toggle-line {
		background: #fff
	}
}

.sidebar-toggle{
	.sidebar-toggle-line {
		background: #000
	}
	padding: 6px 13px 4px;
	rigthbottom()
}



// 设置滚动条的样式
// 参考https://segmentfault.com/a/1190000003708894
::-webkit-scrollbar {
	width: 5px;
	height: 5px;
}
// 滚动槽 
::-webkit-scrollbar-track {
	background: #eee;
}
// 滚动条滑块 
::-webkit-scrollbar-thumb {
	border-radius: 5px;
	background-color: #ccc;
}
::-webkit-scrollbar-thumb:hover {
	background-color: rgb(247, 149, 51);
}
