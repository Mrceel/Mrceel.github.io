		.current{
			background-image: linear-gradient(90deg,  #ef4e7b 0%, #f37055 50%, #a166ab 100%) !important;
		}
		
	}
	.pagination .prev:hover, .pagination .next:hover, .pagination .page-number:hover {
		border: none
		// color: #fff
		// box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
		// background-image: linear-gradient(90deg, #a166ab 0%, #f37055 50%, #a166ab 100%)!important;
		btnHoverStyle()
	}
